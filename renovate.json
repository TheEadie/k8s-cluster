{
    "extends": ["config:base"],
    "ignoreDeps": [
      "ghcr.io/fluxcd/helm-controller",
      "ghcr.io/fluxcd/image-automation-controller",
      "ghcr.io/fluxcd/image-reflector-controller",
      "ghcr.io/fluxcd/kustomize-controller",
      "ghcr.io/fluxcd/notification-controller",
      "ghcr.io/fluxcd/source-controller"
    ],
    "flux": {
      "fileMatch": ["\\.ya?ml$"]
    },
    "helm-values": {
      "fileMatch": ["\\.ya?ml$"]
    },
    "kubernetes": {
      "fileMatch": ["\\.ya?ml$"]
    },
    "regexManagers": [
      {
        "fileMatch": ["\\.yaml$"],
        "matchStrings": [
          "chart:\n *repository: .*?\n *name: (?<depName>.*?)\n *version: (?<currentValue>.*)\n",
          "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n",
          "registryUrl=(?<registryUrl>.*?)\n *tag: (?<depName>.*)-(?<currentValue>.*?)\n",
          "registryUrl=(?<registryUrl>.*?) chart=(?<depName>.*?)\n.*\\/(?<currentValue>.*?)\\/"
        ],
        "datasourceTemplate": "helm"
      },
      {
        "fileMatch": ["\\.yaml$"],
        "matchStrings": [
          "chart:\n *git: git@github.com:(?<depName>.*?).git\n *ref: (?<currentValue>.*?)\n"
        ],
        "datasourceTemplate": "github-tags"
      }
    ],
    "packageRules": [
      {
        "datasources": ["helm"],
        "managers": ["regex"],
        "packageNames": [
          "loki",
          "promtail"
        ],
        "registryUrls": ["https://grafana.github.io/loki/charts/"]
      },
      {
        "datasources": ["helm"],
        "managers": ["regex"],
        "packageNames": [
          "blocky"
        ],
        "registryUrls": ["https://billimek.com/billimek-charts/"]
      },
      {
        "datasources": ["helm"],
        "managers": ["regex"],
        "packageNames": [
          "flux",
          "helm-operator"
        ],
        "registryUrls": ["https://charts.fluxcd.io/"]
      },
      {
        "datasources": ["helm"],
        "managers": ["regex"],
        "packageNames": [
          "ingress-nginx"
        ],
        "registryUrls": ["https://kubernetes.github.io/ingress-nginx/"]
      },
      {
        "datasources": ["helm"],
        "managers": ["regex"],
        "packageNames": [
          "grafana"
        ],
        "registryUrls": ["https://grafana.github.io/helm-charts/"]
      },
      {
        "datasources": ["helm"],
        "managers": ["regex"],
        "packageNames": [
          "prometheus"
        ],
        "registryUrls": ["https://prometheus-community.github.io/helm-charts/"]
      },
      {
        "datasources": ["helm"],
        "managers": ["regex"],
        "packageNames": [
          "metallb"
        ],
        "registryUrls": ["https://charts.bitnami.com/bitnami/"]
      },
      {
        "datasources": ["helm"],
        "managers": ["regex"],
        "packageNames": [
          "jellyfin"
        ],
        "registryUrls": ["https://k8s-at-home.com/charts/"]
      }
    ],
    "masterIssue": true
  }
